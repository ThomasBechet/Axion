#version 330 core

out vec4 out_color;

in vec3 normal;
in vec2 uv;

void main()
{
	vec3 light_dir = vec3(1.0f, 0.0f, 0.0f);

	vec3 l = normalize(light_dir);
	vec3 n = normalize(normal);

	float diff = max(dot(n, l), 0.0);

	//out_color = vec4(1.0f, 1.0f, 1.0f, 1.0f);
	out_color = vec4(1.0f * diff, 1.0f * diff, 1.0f * diff, 1.0f);
	//out_color = vec4(normal.x, normal.y, normal.z, 1.0f);
	//out_color = vec4(uv.x, uv.y, 0.0f, 1.0f);
}