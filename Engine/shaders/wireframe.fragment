#version 330 core

out vec4 out_color;

in vec3 normal;
in vec2 uv;

in vec3 fragPos;
in vec3 color;

void main()
{
	vec3 lightPos = vec3(4.0f, 4.0f, 0.0f);
	float ambientStrength = 0.05f;

	vec3 n = normalize(normal);
	vec3 l = normalize(lightPos - fragPos);

	float diffuse = max(dot(n, l), 0.0f);
	vec3 ambient = color * ambientStrength;

	out_color = vec4((diffuse * color) + ambient, 1.0f);
}